red =imread('red.jpg');
bwr = im2gray(red); % แปลงสีเป็นสีเทา
[r1 c1]=size(bwr); % กว้างกับยาวเก็บค่า
green = imread('green.jpg');
bwg = im2gray(green);
[r2 c2]=size(bwg);
blue = imread('blue.jpg');
bwb = im2gray(blue);
[r3 c3]=size(bwb);
col = [c1,c2,c3]; % หาค่า colum ที่น้อยที่สุด
row = [r1,r2,r3]; % หาค่า row ที่น้อยที่สุด
cmin = min(col);
rmin = min(row);
r = imcrop(bwr,[0,0,cmin,rmin]); % crop ภาพให้มีขนาดเล็กเท่ากับภาพที่เล็กที่สุด
g = imcrop(bwg,[0,0,cmin,rmin]);
b = imcrop(bwb,[0,0,cmin,rmin]);
rgbIM = cat(3,r,g,b); % concatinate เป็นการต่อกันของรูปภาพจำเป็นต้องมีขนากเท่ากัน
imtool(rgbIM);
